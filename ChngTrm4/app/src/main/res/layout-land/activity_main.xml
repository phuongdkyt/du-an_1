<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
       android:background="#1d1c1c"
    >
    <include android:id="@+id/toolbar1"
        layout="@layout/toolbar_layout" />

    <TextView
        android:textColor="@android:color/holo_orange_dark"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đã tắt cảm biến"
        android:textSize="32dp"
        android:id="@+id/hienthi"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:text="Vị trí hiện tại:"
            android:textColor="#fffc03" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/vitri"/>
        <TextView
            android:id="@+id/vitri"
            android:layout_width="148dp"
            android:layout_height="match_parent"
            android:text="chưa xác định"
            android:textColor="#fffc03" />


    </LinearLayout>
<TextView
    android:textColor="@android:color/holo_orange_dark"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/time1"/>

    <TextView
        android:id="@+id/ketnoimang"
        android:textColor="#fffc03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:text="No NumberPhone"
        android:id="@+id/hienthisdt"
        android:textColor="#fffc03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <ToggleButton
        android:id="@+id/battat"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/check_toggle"
        android:layout_gravity="center"
        android:textOff=""
        android:textOn=""
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="10dp"
        android:text=" Kỹ thuật máy tính \n App hoạt động từ Android 5.0 trở lên"
        android:textColor="@android:color/holo_red_light"
        android:textSize="15dp" />

</LinearLayout>